
@{
    ViewBag.Title = "Eventos";
    ViewBag.Heigth = "455px";
}

<style>
    .altura {
        width: 100%;
    }
</style>

<script>

    $(document).ready(() => {
        if (WURFL.is_mobile === true && WURFL.form_factor === "Smartphone") {
            $('#divCarrosel').css("width", "100%");
            $('.altura').css("width", "100%").css("height", "350px");

        } else {
            //nao mobile
        }
    });

</script>


<div id="divCarrosel" style="width:80%; margin:auto;">
    <p style="text-align:center;">O Robo Átom estará disponivel para atuar também em outras modalidades de festas </p>
    <div id="carousel-example-generic" class="carousel slide">
        <!-- Indicators data-interval="false" -->
        <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            <li data-target="#carousel-example-generic" data-slide-to="3"></li>
            <li data-target="#carousel-example-generic" data-slide-to="4"></li>
            <li data-target="#carousel-example-generic" data-slide-to="5"></li>
        </ol>

        <!-- Wrapper for slides -->

        <div class="carousel-inner">
            <div class="item active">
                <img id="divImgItem" src="~/Content/imgs/aniversarioBexiga.jpg" style="width:100%; height:@ViewBag.Heigth;" class="img-thumbnail altura">
                <div class="carousel-caption">
                    <h3>Aniversário</h3>
                    <p>Garanta mais alegria e diversão para os seus convidados!!!</p>
                </div>
            </div>
            <div class="item">
                <img src="~/Content/imgs/Casamento.jpg" style="width:100%; height:@ViewBag.Heigth;" class="img-thumbnail altura">
                <div class="carousel-caption">
                    <h3>Casamento</h3>
                    <p>Proporcione novas possibilidades de diversão para o seu casamento!!!</p>
                </div>
            </div>
            <div class="item">
                <img src="~/Content/imgs/Confraternizacao.jpg" style="width:100%; height:@ViewBag.Heigth;" class="img-thumbnail altura">
                <div class="carousel-caption">
                    <h3>Confraternização</h3>
                    <p>Surpreenda seus amigos e funcionários da sua empresa!!!</p>
                </div>
            </div>
            <div class="item">
                <img src="~/Content/imgs/baladas.jpg" style="width:100%; height:@ViewBag.Heigth;" class="img-thumbnail altura">
                <div class="carousel-caption">
                    <h3>Casas Noturnas</h3>
                    <p>Dê um "Q" a mais nas noites da sua balada!!!</p>
                </div>
            </div>
            <div class="item">
                <img src="~/Content/imgs/debutante.jpg" style="width:100%; height:@ViewBag.Heigth;" class="img-thumbnail altura">
                <div class="carousel-caption">
                    <h3>Debutante</h3>
                    <p>Torne seu sonho de 15 anos ainda mais especial!!!</p>
                </div>
            </div>
            <div class="item">
                <img src="~/Content/imgs/formatura.jpg" style="width:100%; height:@ViewBag.Heigth;" class="img-thumbnail altura">
                <div class="carousel-caption">
                    <h3>Baile de Formatura</h3>
                    <p>Deixe ainda mais especial seu baile de formatura!!!</p>
                </div>
            </div>
        </div>




        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev" style="padding-top:25%;">
            <span class="glyphicon glyphicon-backward text-primary"></span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next" style="padding-top:25%;">
            <span class="glyphicon glyphicon-forward text-primary"></span>
        </a>
    </div>
</div>

